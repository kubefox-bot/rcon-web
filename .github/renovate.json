{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "cargo",
    "npm",
    "dockerfile",
    "docker-compose",
    "github-actions"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": [
        "cargo"
      ],
      "matchPaths": [
        "backend/**"
      ],
      "groupName": "backend rust dependencies"
    },
    {
      "matchManagers": [
        "npm"
      ],
      "matchPaths": [
        "frontend/**"
      ],
      "groupName": "frontend dependencies"
    },
    {
      "matchManagers": [
        "dockerfile",
        "docker-compose"
      ],
      "groupName": "docker dependencies"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github actions dependencies"
    }
  ]
}
